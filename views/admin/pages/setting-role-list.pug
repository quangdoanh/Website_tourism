extends ../layouts/default.pug



block main
  h1.box-title Nhóm quyền

  //- Section 5
  .section-5
    .inner-wrap
      .inner-change-status(change-multi)
        .inner-item
          select
            option(value="") -- Hành động --
            option(value="delete") Xóa
        .inner-item
          button(data-api =`/${adminPathName}/setting/role/change-multi`) Áp dụng
      .inner-search
        <i class="fa-solid fa-magnifying-glass"></i>
        input(type="text" placeholder="Tìm kiếm" search)
      .inner-button-create
        a(href=`/${adminPathName}/setting/role/create`) + Tạo mới
      .inner-button-trash
        a(href=`/${adminPathName}/setting/role/trash`) + Thùng rác
  //- End Section 5

  //- Section 6
  .section-6
    .table-2
      table
        thead
          tr
            th(class="inner-center")
              input(type="checkbox" class="inner-check" check-all)
            th Tên nhóm quyền
            th Mô tả ngắn
            th Hành động
        tbody
          each item in roleList
            tr
                td(class="inner-center")
                  input(type="checkbox" class="inner-check" check-item = item.id)
                td #{item.name}
                td #{item.description}
                td
                  .inner-buttons
                    a(
                      href=`/${pathAdmin}/setting/role/edit/${item.id}`
                      class="inner-edit"
                    ) <i class="fa-regular fa-pen-to-square"></i>
                    button(
                      class="inner-delete"
                      button-delete
                      data-api=`/${pathAdmin}/setting/role/delete/${item.id}`
                  ) <i class="fa-regular fa-trash-can"></i>

  //- End Section 6

  .section-7
    span(class="inner-label") Hiển thị #{pagination.skip + 1} - #{roleList.length + pagination.skip} của #{pagination.totalRole.length}
      select(class="inner-pagination" pagination)
        - for(let i = 1 ; i <= pagination.totalPage ; i++)
              option(value=i) Trang #{i}