extends ../layouts/default.pug



block main
  h1.box-title Thùng rác nhóm quyền

  //- Section 5
  .section-5
    .inner-wrap
      .inner-change-status(change-multi)
        .inner-item
          select
            option(value="") -- Hành động --
            option(value="delete-destroy") Xóa vĩnh viễn
            option(value="undo") Khôi phục
        .inner-item
          button(data-api=`/${pathAdmin}/setting/role/trash/change-multi`) Áp dụng 
      .inner-search
        <i class="fa-solid fa-magnifying-glass"></i>
        input(type="text" placeholder="Tìm kiếm" search)
  //- End Section 5

  //- Section 6
  .section-6
    .table-2
      table
        thead
          tr
            th(class="inner-center")
              input(type="checkbox" class="inner-check" check-all)
            th Tên nhóm quyền
            th Mô tả ngắn
            th Hành động
        tbody
          each item in roleList
            tr
                td(class="inner-center")
                  input(type="checkbox" class="inner-check" check-item = item.id)
                td #{item.name}
                td #{item.description}
                td
                  .inner-buttons
                    button(
                    class="inner-undo"
                    button-delete
                    data-api=`/${pathAdmin}/setting/role/undo/${item.id}`
                    ) <i class="fa-solid fa-rotate-left"></i>
                    button(
                    class="inner-delete"
                    button-delete-destroy
                    data-api=`/${pathAdmin}/setting/role/delete-destroy/${item.id}`
                  ) <i class="fa-regular fa-trash-can"></i>

  //- End Section 6
  .section-7
    span(class="inner-label") Hiển thị #{pagination.skip + 1} - #{roleList.length + pagination.skip} của #{pagination.totalRole.length}
      select(class="inner-pagination" pagination)
        - for(let i = 1 ; i <= pagination.totalPage ; i++)
              option(value=i) Trang #{i}